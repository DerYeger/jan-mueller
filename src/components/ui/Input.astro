---
import { cn } from '~/components/ui/cn'

// eslint-disable-next-line no-undef
interface Props extends astroHTML.JSX.InputHTMLAttributes {
  type: 'number' | 'text'
  placeholder: string
}

const { class: className, ...props } = Astro.props
---

<input class={cn('select-none grow bg-base rounded-sm border border-medium px-2 py-1 text-sm disabled:bg-neutral-200 dark:disabled:bg-neutral-800 transition-colors', className)} {...props} />
