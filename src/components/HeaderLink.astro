---
// eslint-disable-next-line no-undef
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, ...props } = Astro.props as Props

const isActive = href === Astro.url.pathname
---

<a
  href={href}
  rel="prefetch"
  class:list={[
    'inline-block border no-underline px-3 py-1 rounded text-sm hover:text-black hover:dark:text-white hover:border-neutral-400 hover:dark:border-neutral-600',
    {
      'border-neutral-200 dark:border-neutral-800': isActive,
      'border-transparent': !isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
