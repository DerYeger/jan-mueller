---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, ...props } = Astro.props as Props

const isActive = href === Astro.url.pathname
---

<a
  href={href}
  class:list={[
    'inline-block no-underline border-b-[2px] font-semibold',
    {
      'border-black dark:border-white hover:border-neutral-600 hover:dark:border-neutral-300':
        isActive,
      'border-transparent': !isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
