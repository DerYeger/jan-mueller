---
import Showcase from '~/components/showcase/Showcase.astro'
---

<Showcase name="neumorphism" class="grid grid-cols-2 grid-rows-2 bg-none bg-neutral-200">
  <div
    class="m-auto size-full max-h-24 max-w-24 rounded-3xl bg-linear-to-b from-neutral-300 via-neutral-200 to-neutral-100 p-2 outline-solid outline-1 outline-neutral-300"
  >
    <button
      aria-label="Release an ant"
      class="ant-trigger group/button size-full rounded-2xl touch-manipulation bg-linear-to-b from-neutral-100 via-neutral-200 to-neutral-200 p-2 outline-solid outline-1 outline-neutral-200 drop-shadow-md transition-all hover:to-neutral-300 hover:outline-neutral-300 hover:drop-shadow-xs active:to-neutral-400 active:outline-neutral-400"
    >
      <div
        class="h-full rounded-xl bg-neutral-100 p-2 outline-solid outline-1 outline-neutral-100 transition-all group-hover/button:bg-neutral-200 group-hover/button:outline-neutral-200"
      >
        <div
          class="flex h-full items-center justify-center rounded-full bg-neutral-200 shadow-inner outline-solid outline-1 outline-neutral-200 transition-all group-hover/button:bg-neutral-300 group-hover/button:outline-neutral-300"
        >
          <span>🐜</span>
        </div>
      </div>
    </button>
  </div>
  <div
    class="relative m-auto h-12 w-full max-w-24 rounded-full bg-linear-to-b from-neutral-300 via-neutral-200 to-neutral-100 p-2 outline-solid outline-1 outline-neutral-300"
  >
    <input
      type="checkbox"
      id="neon-bar-toggle"
      value=""
      class="peer hidden"
      required=""
    />
    <label
      for="neon-bar-toggle"
      class="relative block h-8 cursor-pointer rounded-full bg-linear-to-br from-red-500 to-neutral-500 shadow-inner outline-solid outline-1 outline-neutral-300 transition-all peer-checked:bg-linear-to-bl peer-checked:from-green-500 peer-checked:to-neutral-500"
    >
    </label>
    <div
      class="pointer-events-none absolute inset-y-2 right-2 size-8 rounded-full bg-neutral-600 bg-linear-to-b from-neutral-100 to-neutral-300 p-1 shadow-md transition-all peer-checked:mr-[calc(100%-12*0.25rem)]"
    >
      <div class="h-full rounded-full bg-neutral-200"></div>
    </div>
  </div>
  <div class="noisy pointer-events-none absolute inset-0 opacity-40"></div>
</Showcase>

<script src="~/components/experiments/neumorphism.ts"></script>
