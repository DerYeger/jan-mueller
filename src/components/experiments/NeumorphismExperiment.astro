---
import Experiment from '~/components/experiments/Experiment.astro'
---

<!-- TODO: Add grain -->
<Experiment class="grid grid-cols-2 grid-rows-2 !bg-neutral-200">
  <div
    class="h-full w-full rounded-3xl bg-gradient-to-b from-neutral-300 via-neutral-200 to-neutral-100 p-2 outline outline-1 outline-neutral-300"
  >
    <button
      aria-label="Release an ant"
      class="ant-trigger group/button h-full w-full rounded-2xl bg-gradient-to-b from-neutral-100 via-neutral-200 to-neutral-200 p-2 outline outline-1 outline-neutral-200 drop-shadow-md transition-all hover:to-neutral-300 hover:outline-neutral-300 hover:drop-shadow-sm"
    >
      <div
        class="h-full rounded-xl bg-neutral-100 p-2 outline outline-1 outline-neutral-100 transition-all group-hover/button:bg-neutral-200 group-hover/button:outline-neutral-200"
      >
        <div
          class="flex h-full items-center justify-center rounded-full bg-neutral-200 shadow-inner outline outline-1 outline-neutral-200 transition-all group-hover/button:bg-neutral-300 group-hover/button:outline-neutral-300"
        >
          <span>🐜</span>
        </div>
      </div>
    </button>
  </div>
</Experiment>
