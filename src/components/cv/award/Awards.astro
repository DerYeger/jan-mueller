---
import AwardEntry from '~/components/cv/award/AwardEntry.astro'
import CVList from '~/components/cv/CVList.astro'
import type { Award } from '~/types'

const awards: Award[] = [
  {
    name: 'Sponsorship award for outstanding academic achievement',
    date: '2021-11',
    by: 'VDE',
    href: 'https://www.vde-kassel.de/de/veranstaltungen/berichte-zu-vergangene-veranstaltungen/foerderpreise-fuer-herausragende-studienleistungen',
  },
  {
    name: 'Algorithms & data structures programming competition, 1st place',
    by: 'University of Kassel',
    date: '2018-07',
  },
  {
    name: 'DPG-Abiturpreis',
    by: 'Deutsche Physikalische Gesellschaft',
    date: '2016-07',
    href: 'https://www.dpg-physik.de/auszeichnungen/dpg-preise/abiturpreis',
  },
].sort((a, b) => b.date.localeCompare(a.date))
---

<CVList id="awards">
  <span slot="title">Awards</span>
  <ul class="flex flex-col md:flex-row gap-8 md:gap-16">
    {
      awards.map((entry) => (
        <li class="flex-1">
          <AwardEntry award={entry} />
        </li>
      ))
    }
  </ul>
</CVList>
