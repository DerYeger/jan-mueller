---
import DateRange from '~/components/date/DateRange.astro'
import type { Education } from '~/types'

export interface Props {
  education: Education
}

const { education } = Astro.props as Props
---

<div class="flex flex-col md:items-center md:text-center" data-testid={education.name}>
  <span class="font-semibold text-lg text-black dark:text-white">{education.name}</span>
  <span>
    {education.institution}, {education.grade}
  </span>
  <div class="text-light">
    <DateRange startDate={education.startDate} endDate={education.endDate} />
  </div>
</div>
