---
import DateRange from '~/components/date/DateRange.astro'
import type { Education } from '~/types'

export interface Props {
  education: Education
}

const { education } = Astro.props as Props
---

<div class="lh-6 flex flex-col" data-testid={education.name}>
  <span class="font-semibold text-black">{education.name}</span>
  <span>
    {education.institution}, {education.grade}
  </span>
  <div class="text-neutral-600">
    <DateRange startDate={education.startDate} endDate={education.endDate} />
  </div>
</div>
