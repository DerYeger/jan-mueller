---
import Icon from 'astro-icon'

import { accounts } from '../lib'
---

<section
  class="screen-wide bg-zinc-200 dark:bg-zinc-800 border-zinc-300 dark:border-zinc-700 border-y prose dark:prose-invert prose-2xl max-w-none py-8 my-32"
>
  <div class="flex gap-8 justify-center children:w-6 children:h-6">
    {
      accounts.map((account) => (
        <a
          href={account.href}
          rel="noreferrer"
          target="_blank"
          class="text-light hover:text-black hover:dark:text-white transition-colors"
        >
          <Icon name={account.icon} />
        </a>
      ))
    }
  </div>
  <div class="flex justify-center mt-8">
    <a
      href="/blog"
      rel="prefetch"
      class="no-underline px-4 py-2 rounded-3xl bg-gradient-to-r from-[#c05560] to-[#6570c4] dark:from-[#b5404b] dark:to-[#4d5bcb] text-white hover:text-white hover:dark:text-white !text-base flex gap-2 items-center hover:scale-105 transition-transform"
    >
      Blog
      <Icon name="akar-icons:arrow-right" class="h-[20px]" />
    </a>
  </div>
</section>
