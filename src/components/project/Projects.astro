---
import OpenInNew from '~/components/icons/OpenInNew.astro'
import Project from '~/components/project/Project.astro'
import type { Project as ProjectType } from '~/types'

const projects: ProjectType[] = [
  {
    id: 'apollo',
    title: 'Apollo',
    details: 'First-order graph model-checking',
    url: 'https://apollo.yeger.eu',
  },
  {
    id: 'vue-masonry-wall',
    title: 'vue-masonry-wall',
    details: 'Vue layout component',
    url: 'https://vue-masonry-wall.yeger.eu',
  },
  {
    id: 'wiener-time',
    title: 'WienerTime',
    details: 'Real-time traffic monitoring',
    url: 'https://wiener-time.vercel.app',
  },
].reverse()
---

<section
  class="prose dark:prose-invert prose-2xl mt-32 mb-[12.5rem] max-w-none border-y border-zinc-300 bg-zinc-200 px-4 pb-4 pt-0 dark:border-zinc-700 dark:bg-zinc-800"
>
  <div class="container mx-auto">
    <h2 class="mx-auto flex w-fit flex-col text-center">
      <span class="self-start text-3xl font-extralight">Featured</span>
      <span class="font-extrabold">Projects</span>
    </h2>
    <p class="block text-center text-base">
      <a
        href="https://github.com/DerYeger?tab=repositories&q=&type=&language=&sort=stargazers"
        rel="noreferrer"
        target="_blank"
        class="text-light"
      >
        All Projects
        <OpenInNew />
      </a>
    </p>
    <div class="-mx-2 -mb-24 flex flex-wrap justify-center">
      {
        projects.map((project) => (
          <div class="w-full max-w-md p-2 md:w-1/2 lg:w-1/3">
            <Project project={project} />
          </div>
        ))
      }
    </div>
  </div>
</section>
