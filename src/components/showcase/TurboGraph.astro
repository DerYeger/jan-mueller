---
import { Image } from 'astro:assets'
import Mark from '~/components/showcase/Mark.astro'
import Showcase from '~/components/showcase/Showcase.astro'
import ShowcaseDescription from '~/components/showcase/ShowcaseDescription.astro'
import ShowcaseTitle from '~/components/showcase/ShowcaseTitle.astro'
import image from '~/assets/projects/turbo-graph.png'
---
<Showcase
  name="Turbo Graph UI"
  link="https://npmjs.org/package/@yeger/turbo-graph"
  class="turbo-graph dark relative"
>
  <ShowcaseTitle class="text-2xl md:text-4xl z-10">@yeger/turbo-graph</ShowcaseTitle>
  <div class="drop-shadow-2xl drop-shadow-black mt-16 -mb-8 rotate-x-47 rotate-y-31 rotate-z-324 translate-x-[15%] 2xl:translate-x-[30%]">
     <Image
       src={image}
       alt="Screenshot of Turbo Graph UI, showing a task graph with several connected tasks"
       quality="high"
       format="webp"
       decoding="async"
       loading="lazy"
       class="mask-b-from-30% mask-b-to-90% mask-r-from-30% mask-r-to-90% scale-[150%] 2xl:scale-[200%] max-h-96"
    />
  </div>
  <ShowcaseDescription class="z-2 text-end text-balance">
    An interactive visualization of <Mark>Turborepo</Mark> task graphs.
    Supports execution of tasks with <Mark class="-mr-1">log streaming</Mark>.
  </ShowcaseDescription>
</Showcase>
