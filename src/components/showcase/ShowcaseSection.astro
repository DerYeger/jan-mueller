---
import About from '~/components/showcase/About.astro'
import Apollo from '~/components/showcase/Apollo.astro'
import Formi from '~/components/showcase/Formi.astro'
import Masonry from '~/components/showcase/Masonry.astro'
import Noted from '~/components/showcase/Noted.astro'
import PhotoShowcase from '~/components/showcase/PhotoShowcase.astro'
import Refunk from '~/components/showcase/Refunk.astro'
import WienerTime from '~/components/showcase/WienerTime.astro'
---

<section class="px-4">
  <div
    class="mx-auto grid max-w-3xl grid-flow-row grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 2xl:max-w-7xl 2xl:grid-cols-4"
  >
    <div class="row-span-2 md:col-span-2 2xl:row-span-3">
      <About />
    </div>
    <div class="row-span-2 2xl:col-span-2">
      <Formi />
    </div>
    <div class="">
      <PhotoShowcase />
    </div>
    <div class="md:col-span-2 2xl:col-span-1">
      <Masonry />
    </div>
    <div class="md:col-span-2 2xl:col-start-3">
      <WienerTime />
    </div>
    <div class="2xl:row-start-4">
      <Refunk />
    </div>
    <div class="2xl:row-start-4">
      <Noted />
    </div>
    <div class="md:col-span-2 2xl:col-span-full">
      <Apollo />
    </div>
  </div>
</section>
