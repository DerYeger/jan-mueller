---
import { Picture } from '@astrojs/image/components'

import Showcase from '~/components/showcase/Showcase.astro'

const image = await import('~/assets/rauris.png')
---

<Showcase class="border-0 !bg-neutral-900 !p-0">
  <Picture
    src={image.default.src}
    alt="Picture of a forest in Rauris, Austria."
    widths={[512]}
    sizes="512px"
    aspectRatio={1}
    quality={85}
    format={['avif', 'webp']}
    loading="lazy"
    class="m-0 h-full w-full object-cover"
  />
</Showcase>
