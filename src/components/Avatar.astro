---
import { Image } from 'astro:assets'

import avatar from '~/assets/avatar.png'
---

<Image
  src={avatar}
  data-testid="avatar"
  class="pointer-events-none m-0 select-none"
  alt="Jan"
  width={400}
  quality="high"
  layout="full-width"
  object-fit="cover"
  format="webp"
  loading="eager"
  style="filter: drop-shadow(-5px 5px 5px rgba(0, 0, 50, 0.35));"
/>
