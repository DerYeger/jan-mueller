---
import type { Props as BaseHeadProps } from '~/components/BaseHead.astro'
import BaseHead from '~/components/BaseHead.astro'
import Footer from '~/components/Footer.astro'
import Header from '~/components/Header.astro'
import Main from '~/components/Main.astro'
import NavigationIndicator from '~/components/NavigationIndicator.astro'
import { cn } from '~/components/ui/cn'
import type { Link } from '~/links'

export interface Props extends Partial<BaseHeadProps> {
  fitScreen?: boolean
  floatingHeader?: boolean
  sublinks?: Link[]
}

const { title, description, image, sublinks, fitScreen = false, floatingHeader = true } = Astro.props as Props
---

<!doctype html>
<html lang="en" class={cn(fitScreen && 'overscroll-none h-dvh')}>
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class={cn('max-w-full overflow-x-hidden bg-neutral-50 dark:bg-black text-medium select-none', fitScreen ? 'h-full flex flex-col' : '')}>
    <Header sublinks={sublinks} floating={floatingHeader} />
    <Main class={cn(fitScreen && 'grow', fitScreen ? '-mt-[90px]' : 'pt-6')}>
      <slot />
    </Main>
    <Footer class={cn(fitScreen && 'hidden')} />
  </body>
  <NavigationIndicator />
</html>
