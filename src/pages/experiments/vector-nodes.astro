---
import BaseHead from '~/components/BaseHead.astro'
import VectorNodesComponent from '~/components/experiments/VectorNodes.vue'
import Header from '~/components/Header.astro'
---

<!doctype html>
<html lang="en" class="dark overscroll-none h-dvh">
  <head>
    <BaseHead loadTheme={false} />
  </head>
  <body class="relative h-full max-w-full overflow-x-hidden bg-(--baklava-editor-background-pattern-default)">
    <Header
      class="border-transparent bg-(--baklava-toolbar-background)! backdrop-filter-none!"
      floating={false}
      showThemeToggle={false}
    />
    <main class="absolute inset-x-0 bottom-0 top-(--header-height) h-[calc(100%-var(--header-height))]">
      <VectorNodesComponent client:only="vue" />
    </main>
  </body>
</html>
