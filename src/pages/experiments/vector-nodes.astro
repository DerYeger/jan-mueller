---
import BaseHead from '~/components/BaseHead.astro'
import VectorNodesComponent from '~/components/experiments/VectorNodes.vue'
import Header from '~/components/Header.astro'
import NavigationIndicator from '~/components/NavigationIndicator.astro'
---

<!doctype html>
<html lang="en" class="dark overscroll-none h-dvh">
  <head>
    <BaseHead loadTheme={false} />
  </head>
  <body class="relative h-full max-w-full overflow-x-hidden select-none bg-[#1e2430]">
    <Header
      class="border-transparent bg-transparent backdrop-filter-none!"
      floating={false}
      showThemeToggle={false}
    />
    <main class="absolute inset-x-0 bottom-0 top-[calc(var(--header-height)-1px)] h-[calc(100%-var(--header-height)+1px)]">
      <VectorNodesComponent client:only="vue" />
    </main>
  </body>
  <NavigationIndicator />
</html>
