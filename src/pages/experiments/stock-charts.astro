---
import BaseHead from '@components/BaseHead.astro'
import StockChartsVue from '@components/experiments/stock-charts/StockCharts.vue'
import Header from '@components/Header.astro'
import NavigationIndicator from '@components/NavigationIndicator.astro'
---

<!doctype html>
<html lang='en' class='overscroll-none h-dvh'>
  <head>
    <BaseHead />
  </head>
  <body
    class='relative h-full max-w-full overflow-x-hidden bg-body text-medium'
  >
    <Header floating={false} />
    <main
      class='absolute inset-x-0 bottom-0 top-[calc(var(--header-height)-1px)] h-[calc(100%-var(--header-height)+1px)]'
    >
      <StockChartsVue client:load />
    </main>
  </body><NavigationIndicator />
</html>
