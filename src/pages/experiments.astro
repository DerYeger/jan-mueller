---
import VectorNodesExperiment from '~/components/experiments/VectorNodesExperiment.astro'
import MainLayout from '~/layouts/MainLayout.astro'
---

<MainLayout title="Experiments">
  <div class="mx-auto max-w-3xl px-4 py-8 2xl:max-w-7xl">
    <div class="prose mb-8 max-w-none">
      <h1 class="mb-4">Jan's Experiments</h1>
      <span class="mt-0 text-2xl font-bold text-neutral-500">
        A space for ideas that don't fit the scope of a dedicated project.
      </span>
    </div>
    <div
      class="grid grid-flow-row grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 2xl:grid-cols-4"
    >
      <style is:global>
        .grid-lines {
          opacity: 0;
        }
      </style>
      <VectorNodesExperiment />
    </div>
  </div>
</MainLayout>
